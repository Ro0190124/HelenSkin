@model IEnumerable<NGUOI_DUNG>

<div class="container">
		<div class="mt-3">
			<h2> Tài khoản </h2>
		</div>
		<div class="">

			<a asp-controller="User" asp-action="Create" class="btn btn-primary">Thêm Nhân Viên</a>
			<br />
		</div>
	@using (Html.BeginForm())

	{

		<p>

			Nhập thông tin: @Html.TextBox("SearchString") <input type="submit" value="Tìm kiếm" />

		</p>

	}
	<div class="Tb-Container">
		<table class="table_user responsive-table">
			<thead>
				<tr>
					<th> Tên Tài Khoản</th>
					<th> Mật Khẩu</th>
					<th> Họ Tên</th>
					<th> Email</th>
					<th> Số điện thoại</th>
					<th> Ngày sinh</th>
					<th> Ngày Tạo</th>
					<th> Địa chỉ</th>
					<th> Quyền</th>
					<th> Sửa</th>
					<th> Xóa</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					string position;
					@if (item.PhanQuyen == false)
					{
						position = "Admin";
					}
					else
					{
						position = "Người dùng";
					}
					<tr>
						<td>@item.TenTaiKhoan</td>
						<td>@item.MatKhau</td>
						<td>@item.TenND</td>
						<td>@item.Email</td>
						<td>@item.SoDienThoai</td>
						<td>@item.NgaySinh.ToShortDateString()</td>
						<td>@item.NgayTao.ToShortDateString()</td>
						<td>@item.DiaChi</td>
						<td>@position</td>
						<td>
							<div class="bgr-a">
								<a class="btn btn-primary" asp-controller="" asp-action="" asp-route-id="@item.MaND" >
									Sửa
								</a>
							</div>
						</td>
						<td>
							<div class="bgr-x">
								<a class="btn btn-danger" asp-controller="" asp-action="" asp-route-id="@item.MaND">
									Xóa
								</a>

							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>