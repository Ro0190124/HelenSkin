@model NGUOI_DUNG

<div class="create-nd mt-3">
    <div class="ThenTK-form register">
        <h2>Sửa tài khoản</h2>
        <form method="post" asp-action="Edit">
            <input type="hidden" asp-for="MaND" />
            <div class="row">
                <div class="col-lg-6">
                    <p>
                        <label>Họ và tên<span>:</span></label></br>
                        <input type="text" name="TenND" asp-for="TenND"></br>
                        <span asp-validation-for="TenND" class="text-danger"></span>
                    </p>
                </div>
                <div class="col-lg-6">
                    <p>
                        <label>Số điện thoại<span>:</span></label></br>
                        <input type="text" name="SoDienThoai" required asp-for="SoDienThoai"></br>
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <p>
                        <label>Email<span>:</span></label></br>
                        <input type="email" name="Email" required asp-for="Email"></br>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </p>
                </div>
                <div class="col-lg-6 khoa">
                    <p>
                        <label>Tên tài khoản<span>:</span></label></br>
                        <input type="text" name="TenTaiKhoan" required asp-for="TenTaiKhoan" readonly></br>
                        <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <p>
                        <label>Mật khẩu<span>:</span></label></br>
                        <input type="text" name="MatKhau" required asp-for="MatKhau"></br>
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </p>
                </div>
                <div class="col-lg-6">
                    <p>
                        <label>Ngày sinh<span>:</span></label></br>
                        <input type="date" name="NgaySinh" required asp-for="NgaySinh"></br>
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 ">
                    <p>
                        <label>Địa chỉ<span>:</span></label></br>
                        <input type="text" name="DiaChi" required asp-for="DiaChi"></br>
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </p>
                </div>
                <div class="col-lg-6 ">
                    <p >
                        <label>Phân quyền<span>:</span></label></br>
                        <input type="hidden" name="PhanQuen" asp-for="PhanQuyen" />
                    </p>
                </div>
            </div>
            <div class="ThemTK-btn mt-3">
                <button type="submit">Sửa tài khoản</button>
            </div>
        </form>
    </div>
</div>