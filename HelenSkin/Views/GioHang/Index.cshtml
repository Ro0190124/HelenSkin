 @model IEnumerable<GIO_HANG>
<div class="shopping_cart_area">
    <form action="#">
        <!--coupon code area start-->
        <div class="coupon_area">
            <div class="row">
                @{
                    int j = 0;
                }
                @foreach (var i in Model)
                {
                    <div class="col-lg-12 col-md-6">
                        <div class="coupon_code d-flex giohang-sp row py-3">
                            
                            <div class="col-lg-3">
                                Mã giỏ hàng: 
                                <p><strong>@i.MaGioHang</strong></p>
                            </div>
                            <div class="col-lg-3">
                                Mã người dùng:
                                <p>@i.MaNguoiDung</p>
                            </div><div class="col-lg-3">
                                Tên người dùng:
                                <p>@i.NGUOI_DUNG.TenND</p>
                            </div>
                            <div class="checkout_btn">
                                <a asp-controller="GioHang" asp-action="ChiTietGioHang" asp-route-id="@i.MaGioHang"> Chi Tiết</a>
                            </div>
                            
                            <a class=" delete-btn" data-id="@i.MaGioHang"></a>
                        </div>
                    </div>
                }
              
            </div>
        </div>
        <!--coupon code area end-->
    </form>
</div>
<!--shopping cart area end -->