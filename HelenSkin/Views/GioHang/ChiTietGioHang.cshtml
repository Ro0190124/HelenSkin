@model IEnumerable<CHI_TIET_GIO_HANG>
<div class="shopping_cart_area">
    <form action="#">
        <!--coupon code area start-->
        <div class="coupon_area">
            <div class="row">
                <div class="col-lg-9 col-md-9">
                    @{
                        int j = 0;
                    }
                    @{
                        var gioHang = ViewBag.GioHang as IEnumerable<CHI_TIET_GIO_HANG>;
                        var firstImages = ViewBag.FirstImages as List<string>;
                    }

                    @for (int i = 0; i < gioHang.Count(); i++)
                    {
                        var item = gioHang.ElementAt(i);
                        var imageUrl = firstImages.ElementAtOrDefault(i) ?? "/path/to/default/image.jpg"; // Get the corresponding image URL from ViewBag

                        <div class="col-lg-12 col-md-12">
                            <div class="coupon_code d-flex giohang-sp row py-3">
                                <div class="col-lg-1">
                                    <input type="checkbox">
                                </div>
                                <img class="col-lg-4" src="@imageUrl" alt="Product Image">
                                <div class="col-lg-3">
                                    <p><strong>@item.SAN_PHAM.TenSP</strong></p>
                                    <input asp-for="@item.SoLuong" min="0" max="100" value="@item.SoLuong" type="number">
                                </div>
                                <div class="col-lg-3">
                                    <a><i class="fas fa-trash"></i></a>
                                    <p> Đơn giá: @item.SAN_PHAM.Gia đ</p>
                                </div>
                                
                            </div>
                        </div>
                    }
                </div>
               

                <div class="col-lg-3 col-md-3">
                    <div class="coupon_code">
                        <h3>Thông tin đơn hàng</h3>
                        <div class="coupon_inner">
                            <div class="cart_subtotal">
                                <p>Tổng tiền</p>
                                <p class="cart_amount">400000</p>
                            </div>
                            <div class="cart_subtotal">
                                <p>Tổng tiền thanh toán</p>
                                <p class="cart_amount">400000</p>
                            </div>
                            <div class="ThemNV">
                                <a class="btn btn-xanhLa" href="/ThongTinGiaoHang.html">Thanh toán</a>
                               
                            </div>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--coupon code area end-->
    </form>
</div>