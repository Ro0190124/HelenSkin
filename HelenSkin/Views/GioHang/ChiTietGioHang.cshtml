@model IEnumerable<CHI_TIET_GIO_HANG>

<div class="shopping_cart_area">
    <form action="#">
        <!--coupon code area start-->
        <div class="coupon_area">
            <div class="row">
                <div class="col-lg-9 col-md-9">
                    @{
                        int j = 0;
                    }
                    @{
                        var gioHang = ViewBag.GioHang as IEnumerable<CHI_TIET_GIO_HANG>;
                        var firstImages = ViewBag.FirstImages as List<string>;
                    }

                    @for (int i = 0; i < gioHang.Count(); i++)
                    {
                        var item = gioHang.ElementAt(i);
                        var imageUrl = firstImages.ElementAtOrDefault(i) ?? "/path/to/default/image.jpg"; // Get the corresponding image URL from ViewBag
                        <div class="col-lg-12 col-md-12">
                            <div class="coupon_code d-flex giohang-sp row py-3">
                              
                                <img class="col-lg-4" src="@imageUrl" alt="Product Image">
                                <div class="col-lg-3">
                                    <p><strong>@item.SAN_PHAM.TenSP</strong></p>

                                    <input asp-asp-for="@item.SoLuong" value="@item.SoLuong" name="quantity" type="number" min="1" max="100" onchange="updateQuantity('@item.MaSP', this.value)" />

                                </div>
                                <div class="col-lg-3">
                                    <a onclick="deleteProduct('@item.MaSP')" ><i class="fas fa-trash"></i> Xóa </a>
                                    <p> Đơn giá: @item.SAN_PHAM.Gia đ</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                

                <div class="col-lg-3 col-md-3">
                    <div class="coupon_code">
                        <h3>Thông tin đơn hàng</h3>
                        <div class="coupon_inner">
                            <div class="cart_subtotal">
                                <p>Tổng tiền</p>
                                <p class="cart_amount">
                                    @{
                                        double total = 0;
                                        for (int i = 0; i < gioHang.Count(); i++)
                                        {
                                            var item = gioHang.ElementAt(i);
                                            total += item.SAN_PHAM.Gia * item.SoLuong;
                                        }
                                        @total
                                    }
                                </p>
                            </div>
                            <div class="ThemNV">
                                <div class="ghi-chu">
                                    <label for="ghi-chu">Ghi chú:</label>
                                    <textarea id="ghi-chu" name="ghiChu" rows="4" cols="50"></textarea>
                                </div>
                                <a class="btn btn-xanhLa" onclick="datHang()">Đặt hàng</a>
                            </div>
                       </div>
                    </div>
                </div>
            </div>
        </div>
        <!--coupon code area end-->
    </form>
</div>


<script>
    function updateQuantity(itemId, newQuantity) {
        $.ajax({
            url: '/GioHang/UpdateQuantity',
            type: 'POST',
            data: { itemId: itemId, newQuantity: newQuantity },
            success: function (response) {
                console.log('Số lượng đã được cập nhật thành công.');
                // Reload lại trang sau khi cập nhật thành công
                location.reload();
            },
            error: function (xhr, status, error) {
                console.error('Lỗi khi cập nhật số lượng: ' + error);
            }
        });
    }
    function deleteProduct(itemId) {
        $.ajax({
            url: '/GioHang/DeleteProduct',
            type: 'POST',
            data: { itemId: itemId },
            success: function (response) {
                console.log('Sản phẩm đã được xóa khỏi giỏ hàng.');
                // Reload lại trang sau khi xóa sản phẩm thành công
                location.reload();
            },
            error: function (xhr, status, error) {
                console.error('Lỗi khi xóa sản phẩm khỏi giỏ hàng: ' + error);
            }
        });
    }

    function datHang() {
        var ghiChu = $('#ghi-chu').val(); // Lấy ghi chú từ input
        $.ajax({
            url: '/GioHang/DatHang',
            type: 'POST',
            data: { ghiChu: ghiChu },
            success: function (response) {
                console.log('Đặt hàng thành công.');
                TempData["tbThemVaoGioHang"] = "Thêm vào giỏ hàng thành công!";
                location.reload();
            },
            error: function (xhr, status, error) {
                TempData["tbDatHangLoi"] = "Không có sản phẩm trong giò hàng";
                location.reload();
            }
        });
    }
</script>

</script>
