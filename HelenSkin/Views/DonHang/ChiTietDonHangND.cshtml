@model IEnumerable<CHI_TIET_GIO_HANG>

<div class="shopping_cart_area">
    <form action="#">
        <!--coupon code area start-->
        <div class="coupon_area">
            <div class="row">
                <div class="col-lg-8 col-md-8">
                    <div class="col-lg-12 col-md-12">
                        <div class="coupon_code d-flex donhang-sp row py-3">
                            @foreach (var item in Model)
                            {




                                <div class="col-lg-12 col-md-12">
                                    <div class="coupon_code d-flex giohang-sp row py-3">
                                        @if (item.SAN_PHAM.db_DS_MEDIA_HINH_ANH != null && item.SAN_PHAM.db_DS_MEDIA_HINH_ANH.Any())
                                        {
                                            // Kiểm tra xem đường dẫn hình ảnh có tồn tại hay không
                                            var firstImage = item.SAN_PHAM.db_DS_MEDIA_HINH_ANH.FirstOrDefault();
                                            if (firstImage != null && !string.IsNullOrEmpty(firstImage.MediaHinhAnh))
                                            {
                                                <img src="~/img/product/@firstImage.MediaHinhAnh" alt="Hình ảnh" style="width:300px; height:300px" />
                                            }
                                            else
                                            {
                                                <span>Đường dẫn hình ảnh không hợp lệ</span>
                                            }
                                        }
                                        else
                                        {
                                            <span>Không có hình ảnh</span>
                                        }

                                        <div class="col-lg-3">
                                            <p><strong>@item.SAN_PHAM.TenSP</strong></p>

                                            <input asp-asp-for="@item.SoLuong" value="@item.SoLuong" name="quantity" type="number" min="0" max="100" onchange="updateQuantity('@item.MaSP', this.value)" />

                                        </div>
                                        <div class="col-lg-3">
                                            <a onclick="deleteProduct('@item.MaSP')"><i class="fas fa-trash"></i> Xóa </a>
                                            <p> Đơn giá: @item.SAN_PHAM.Gia đ</p>
                                        </div>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>

                  


                </div>


                <div class="col-lg-4 col-md-4">
                    <div class="coupon_code">
                        <h3>Thông tin đơn hàng</h3>
                        <div class="coupon_inner">

                            <div class="cart_subtotal border-bt mt-3">
                                <p>Ngày đặt </p>
                                <p class="cart_amount">
                                    @ViewBag.HoaDon.NgayTao
                                </p>
                            </div>
                            <div class="cart_subtotal border-bt mt-3">
                                <p>Địa chỉ </p>
                                <p class="cart_amount">
                                   @Model.FirstOrDefault().GIO_HANG.NGUOI_DUNG.DiaChi
                                </p>
                            </div>

                            <div class="cart_subtotal border-bt mt-3">
                                <p>Ghi chú</p>
                                <p class="cart_amount">
                                   @ViewBag.HoaDon.GhiChu
                                </p>
                            </div>

                            <div class="cart_subtotal border-bt mt-3">
                                <p>Đơn vị vận chuyển</p>
                                <p class="cart_amount">
                                    @ViewBag.HoaDon.DON_VI_VAN_CHUYEN.TenDonViVanChuyen
                                </p>
                            </div>

                            <div class="cart_subtotal border-bt mt-3">
                                <p>Trạng thái</p>
                                <p class="cart_amount">
                                    Thành công
                                </p>
                            </div>

                            <div class="cart_subtotal mt-3">
                                <p>Tổng tiền</p>
                                <p class="cart_amount">
                                    10000
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--coupon code area end-->
    </form>
</div>
